{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "path": [
        "./node_modules/path-browserify"
      ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "types": [
      "jest",
      "node",
      "@types/jest"
    ],
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
